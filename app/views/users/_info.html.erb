<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to user_followings_path(user.id) do %>
        <%= user.followings.count %></th>
      <% end %>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to user_followers_path(user.id) do %>
        <%= user.followers.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>
      <% if user != current_user%>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", user_relationship_path(user.id), method: :delete %>
          <% if is_room == true %>
    <p class="user-show-room">
      <%= link_to "チャットへ", room_path(room), class: "btn btn-primary btn-lg" %>
    </p>
  <% else %>
    <%= form_with model: room, url: rooms_path do |f| %>
      <%= f.fields_for :entries, entry do |e| %>
        <%= e.hidden_field :user_id, value: user.id %>
      <% end %>
      <%= f.submit "チャットを始める", class: "btn btn-primary btn-lg user-show-chat" %>
    <% end %>
  <% end %>
        <% else %>
          <%= link_to "フォローする", user_relationship_path(user.id), method: :post %>
        <% end %>
      <% end %>





    </th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>